<div class="task-wrapper">

  <div class="row">
    <div class="col-xs-12 col-md-3"></div>
    <div class="col-xs-12 col-md-6">
      <% if policy(@task).new? %>
          <div id="task_form">
            <%= render :partial => 'task_form', :locals => {:task => @task, :challenge => @challenge} %>
          </div>
          <br/>
      <% end %>

      <h3>Task</h3>

      <div id="task-list">
        <% @tasks.each do |task| %>
            <% next if task.new_record? %>
            <%= render :partial => 'task', :object => task %>
        <% end %>
      </div>

    </div>

    <div class="col-xs-12 col-md-3"></div>
  </div>


</div>