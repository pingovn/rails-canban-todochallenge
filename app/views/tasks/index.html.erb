<div class="task-wrapper">
  <div class="row">
    <div class="col-xs-12 col-md-3"></div>
    <div class="col-xs-12 col-md-6">
      <%= simple_form_for(:task, url: challenge_tasks_path(@challenge, @task),  html: {role: 'form', class: 'form-inline'}) do |f| %>
          <%= f.input :name, label: false, placeholder: "Task Name" %>
          <%= f.input :type, label: false, as: :select, collection: Task.type_collection, prompt: 'Select a task type' %>
          <%= f.input :point, label: false, placeholder: 'Point', input_html: {style: "width: 60px;"} %>
          <%= f.button :submit, 'Add' %>
      <% end %>
      <br/>
      <h3>Task</h3>
      <% @tasks.each do |task| %>
          <% next if task.new_record?%>
          <div class="row">
            <div class="col-xs-5"><%= task.name %></div>
            <div class="col-xs-3"><%= task.type %></div>
            <div class="col-xs-2"><%= task.point %></div>
            <div class="col-xs-2">
              <%= link_to edit_challenge_task_path(@challenge, task) do %>
                  <span class="glyphicon glyphicon-edit">&nbsp;</span>
              <% end %>
              <%= link_to challenge_task_path(@challenge, task), method: :delete do %>
                  <span class="glyphicon glyphicon-trash">&nbsp;</span>
              <% end %>
            </div>
          </div>
      <% end %>

    </div>

    <div class="col-xs-12 col-md-3"></div>
  </div>


</div>